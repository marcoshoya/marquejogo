{% extends 'MarcoshoyaMarquejogoBundle:Provider:index.html.twig' %}

{% form_theme form 'MarcoshoyaMarquejogoBundle:Adm/Form:fields.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Provider/Dashboard:sidebar', {view : 'product', item: 'new'})) }}
{% endblock %}

{% block container %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Configurar Quadras</h1>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}

    {{ form_row (form._token) }}

    <div class="row">
        <div class="col-lg-12">
            <p align="right">
                <a href="{{ path('providerproduct') }}" class="btn btn-lg btn-link">Voltar</a>
                <button type="submit" class="submit btn btn-primary" value="Salvar" alt="Salvar" title="Salvar"> 
                    <i class="fa fa-save"></i> Salvar 
                </button>
            </p>
        </div>
    </div>

    {{ render(controller('MarcoshoyaMarquejogoBundle:Provider/Dashboard:flash')) }}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Inserir quadra
                </div>        
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-2">{{ form_label(form.isActive, 'Ativo') }}</label>
                        <div class="col-md-2 {% if not form.isActive.vars.valid %} has-error {% endif %}">
                            {{ form_widget(form.isActive, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.isActive) }}
                        </div>
                        <label class="col-md-2">{{ form_label(form.capacity, 'Capacidade') }}</label>
                        <div class="col-md-2 {% if not form.capacity.vars.valid %} has-error {% endif %}">
                            {{ form_widget(form.capacity, { 'attr': {'class': 'form-control', 'min': 1, 'max': 1000} }) }}
                            {{ form_errors(form.capacity) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group {% if not form.name.vars.valid %} has-error {% endif %}">
                        <label class="col-md-2">{{ form_label(form.name, 'Nome') }}</label>
                        <div class="col-md-8">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group {% if not form.type.vars.valid %} has-error {% endif %}">
                        <label class="col-md-2">{{ form_label(form.type, 'Tipo') }}</label>
                        <div class="col-md-8">
                            {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.type) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group {% if not form.category.vars.valid %} has-error {% endif %}">
                        <label class="col-md-2">{{ form_label(form.category, 'Categoria') }}</label>
                        <div class="col-md-8">
                            {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.category) }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
    {{ form_end(form) }} 
{% endblock %}

