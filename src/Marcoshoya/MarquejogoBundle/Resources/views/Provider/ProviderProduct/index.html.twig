{% extends 'MarcoshoyaMarquejogoBundle:Provider:index.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Provider/Dashboard:sidebar', {view : 'product', item: 'product'})) }}
{% endblock %}

{% block container %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Configurar Quadras</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <p align="right">
                <a class="btn btn-primary" href="{{ path('providerproduct_new') }}" alt="Inserir novo" title="Inserir novo">
                    Inserir novo
                </a>
            </p>
        </div>
    </div>

    {{ render(controller('MarcoshoyaMarquejogoBundle:Provider/Dashboard:flash')) }}

    <div class="row">
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Quadras
                </div>        
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th width="6%">#</th>
                                <th width="34%">Nome</th>
                                <th width="12%">Capacidade</th>
                                <th>Categoria</th>
                                <th width="12%">Tipo</th>
                                <th width="12%" style="text-align: center">Ativo</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.id }}</td>
                                    <td><a href="{{ path('providerproduct_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                                    <td>{{ entity.capacity }}</td>
                                    <td>{{ entity.category }}</td>
                                    <td>{{ entity.type }}</td>
                                    <td align="center">
                                        {% if entity.isActive %}
                                            <i class="fa fa-check"></i>
                                        {% else %}
                                            <i class="fa fa-times"></i>
                                        {% endif %}
                                    </td>
                                    <td class="center">
                                        <span class="btn-group">
                                            <a href="{{ path('providerproduct_edit', { 'id': entity.id }) }}"><i class="fa fa-edit "></i> Editar</a>
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <!-- /.row -->

{% endblock %}
