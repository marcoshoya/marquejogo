{% extends 'MarcoshoyaMarquejogoBundle:Provider:index.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Provider/Dashboard:sidebar', {view : 'book', item: 'view'})) }}
{% endblock %}

{% block container %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Visualizar reserva</h1>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <p align="right">
                {% if entity.allowCancel %}
                    <a href="{{ path('provider_book_cancel', {"id": entity.id}) }}" class="btn btn-warning" alt="Cancelar" title="Cancelar" onclick="return confirm('Deseja cancelar a reserva?')">
                        Cancelar
                    </a>
                {% endif %}
                {% if entity.allowConfirm %}
                    <a href="{{ path('provider_book_confirm', {"id": entity.id}) }}" class="btn btn-success" alt="Confirmar" title="Confirmar" onclick="return confirm('Deseja confirmar a reserva?')">
                        Confirmar
                    </a>
                {% endif %}
            </p>
        </div>
    </div>
    <!-- /.row -->
    
    {{ render(controller('MarcoshoyaMarquejogoBundle:Provider/Dashboard:flash')) }}
    
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reserva #{{ entity.id }}</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-2">Status</label>
                        <div class="col-md-8">
                            <b>{{ entity.statusName }}</b>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Número</label>
                        <div class="col-md-8">
                            {{ entity.id }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Data</label>
                        <div class="col-md-8">
                            {{ entity.date.format('d/m/Y') }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Horário</label>
                        <div class="col-md-8">
                            {{ entity.date.format('H:i') }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Valor</label>
                        <div class="col-md-8">
                            {{ entity.totalPrice }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Dados do cliente</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-2">Nome</label>
                        <div class="col-md-8">
                            {{ entity.customer.name }}
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2">Cliente</label>
                        <div class="col-md-8">
                            {{ entity.customer.username }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Telefone</label>
                        <div class="col-md-8">
                            {{ entity.customer.phone }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->

{% endblock %}