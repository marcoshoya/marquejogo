{% extends 'MarcoshoyaMarquejogoBundle:Site:index.html.twig' %}

{% form_theme form 'MarcoshoyaMarquejogoBundle:Site/Form:fields_search.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}

{% block container %}

    <div class="container">
        <div class="master-background">
            <div class="background">  </div>
        </div>
        <!-- Page Content -->
        <div class="search-header">
            <h3>Reserve sua quadra agora mesmo</h3>
        </div>
        <div class="searchbox">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
            {{ form_row (form._token) }}
            <fieldset>
                <div class="form-group">
                    <label class="col-md-2">{{ form_label(form.city, 'Cidade') }}</label>
                    <div class="col-md-1">
                        {{ form_widget(form.city, { 'attr': {'class': 'form-control form-where'} }) }}
                        {{ form_errors(form.city) }}
                    </div>
                </div>

                <div class="form-group form-group-date">
                    <label class="col-md-2">{{ form_label(form.date, 'Data') }}</label>
                    <div class="col-md-1">
                        {{ form_widget(form.date, { 'attr': {'class': 'form-control form-date'} }) }}
                        {{ form_errors(form.date) }}
                    </div>
                </div>

                <div class="form-group form-group-hour">
                    <label class="col-md-2">{{ form_label(form.hour, 'Hora') }}</label>
                    <div class="col-md-1">
                        {{ form_widget(form.hour, { 'attr': {'class': 'form-control form-hour'} }) }}
                        {{ form_errors(form.hour) }}
                    </div>
                </div>

                <div class="clear"> </div>

                <div class="form-group-submit">
                    <input class="btn btn-search" type="submit" value="Pesquisar" />
                </div>

            </fieldset>
            {{ form_end(form) }}

        </div>
    </div>


{% endblock %}