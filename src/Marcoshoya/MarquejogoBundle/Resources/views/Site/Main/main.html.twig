{% block container %}

    <div class="container">
        <div class="master-background">
            <div class="background">  </div>
        </div>
        <!-- Page Content -->
        <div class="search-header">
            <h3>Reserve sua quadra agora mesmo</h3>
        </div>
        <div class="searchbox">
            <form action="{{ path('do_search') }}" method="post" >
                <fieldset>
                    <div class="form-group">
                        <label class="col-md-2">Onde</label>
                        <div class="col-md-1">
