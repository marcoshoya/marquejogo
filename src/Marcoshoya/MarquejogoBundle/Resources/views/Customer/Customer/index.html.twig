{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Customer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Name</th>
                <th>Cpf</th>
                <th>Gender</th>
                <th>Position</th>
                <th>Birthday</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Number</th>
                <th>Complement</th>
                <th>Neighborhood</th>
                <th>City</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('dados_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.cpf }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.position }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.complement }}</td>
                <td>{{ entity.neighborhood }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.state }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('dados_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('dados_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('dados_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
