{% extends 'MarcoshoyaMarquejogoBundle:Customer:index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/marcoshoyamarquejogo/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block container %}

    <div class="page-header">
        <h1>Visualizar Reserva</h1>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <p align="right">
                <a href="{{ path('customer_book_list') }}" class="btn btn-lg btn-link">Voltar</a>
                {% if entity.allowCancel %}
                    <a href="{{ path('customer_book_cancel', {"id": entity.id}) }}" class="btn btn-lg btn-danger" onclick="return confirm('Deseja cancelar a reserva?')">
                        Cancelar
                    </a>
                {% endif %}
                <a href="{{ path('customer_book_invite', {"id": entity.id}) }}" class="btn btn-lg btn-default">Convidar amigos</a>
            </p>
        </div>
    </div>

    {{ render(controller('MarcoshoyaMarquejogoBundle:Customer/Dashboard:flash')) }}

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reserva #{{ entity.id }}</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-2">Número</label>
                        <div class="col-md-8">
                            {{ entity.id }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Data</label>
                        <div class="col-md-8">
                            {{ entity.date.format('d/m/Y') }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Horário</label>
                        <div class="col-md-8">
                            {{ entity.date.format('H:i') }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Valor</label>
                        <div class="col-md-8">
                            {{ entity.totalPrice }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Status</label>
                        <div class="col-md-8">
                            {{ entity.statusName }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Dados do Local</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-2">Nome</label>
                        <div class="col-md-8">
                            {{ entity.provider.name }}
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2">Endereço</label>
                        <div class="col-md-8">
                            {{ entity.provider.fulladdress }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Telefone</label>
                        <div class="col-md-8">
                            {{ entity.provider.phone }}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->

{% endblock %}