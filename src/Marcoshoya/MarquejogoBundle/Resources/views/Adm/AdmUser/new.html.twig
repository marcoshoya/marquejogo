{% extends 'MarcoshoyaMarquejogoBundle:Adm:index.html.twig' %}

{% form_theme form 'MarcoshoyaMarquejogoBundle:Adm/Form:fields.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Adm/Dashboard:sidebar', {view : 'user', item: 'new'})) }}
{% endblock %}

{% block container %}

    <div id="page-wrapper">

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}

            {{ form_row (form._token) }}

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Inserir usuário</h1>
                    <p align="right">
                        <button type="submit" class="submit btn btn-primary" value="Salvar" alt="Salvar" title="Salvar">
                            <i class="icon-save"></i> Salvar
                        </button>
                    </p>
                </div>
                <!-- /.col-lg-12 -->

            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Dados</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="col-md-2">{{ form_label(form.isActive, 'Ativo') }}</label>
                                <div class="col-md-1">
                                    {{ form_widget(form.isActive, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.isActive) }}
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group {% if not form.username.vars.valid %} has-error {% endif %}">
                                <label class="col-md-2">{{ form_label(form.username, 'Usuário') }}</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group {% if not form.email.vars.valid %} has-error {% endif %}">
                                <label class="col-md-2">{{ form_label(form.email, 'Email') }}</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group {% if not form.password.vars.valid %} has-error {% endif %}">
                                <label class="col-md-2">{{ form_label(form.password, 'Senha') }}</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.password) }}
                                </div>
                                <div class="clearfix"></div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
