{% extends 'MarcoshoyaMarquejogoBundle:Adm:index.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Adm/Dashboard:sidebar', {view : 'user', item: 'list'})) }}
{% endblock %}

{% block container %}

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Listando usuários</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <p align="right">
                    <a class="btn btn-primary" href="{{ path('admuser_new') }}" alt="Inserir novo" title="Inserir novo">
                        Inserir Novo
                    </a>
                </p>
            </div>
        </div>

        {{ render(controller('MarcoshoyaMarquejogoBundle:Adm/Dashboard:flash')) }}

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Usuários
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th width="25%">Usuário</th>
                                        <th width="35%">Email</th>
                                        <th>Ativo</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for entity in entities %}
                                        <tr class="odd gradeX">
                                            <td>{{ entity.id }}</td>
                                            <td><a href="{{ path('admuser_edit', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                                            <td>{{ entity.email }}</td>
                                            <td align="center">
                                                {% if entity.isActive %}
                                                    <i class="fa fa-check"></i>
                                                {% else %}
                                                    <i class="fa fa-times"></i>
                                                {% endif %}
                                            </td>
                                            <td class="center">
                                                <span class="btn-group">
                                                    <a href="{{ path('admuser_edit', { 'id': entity.id }) }}" alt="Editar" title="Editar"><i class="fa fa-edit "></i></a>
                                                    <a href="{{ path('admuser_delete', { 'id': entity.id }) }}" alt="Excluir" title="Excluir" onclick="return confirm('Deseja excluir definitivamente?')"><i class="fa fa-trash-o"></i></a>
                                                </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>

{% endblock %}