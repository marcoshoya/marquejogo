{% form_theme form 'MarcoshoyaMarquejogoBundle:Adm/Form:fields.html.twig' %}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>MarqueJogo.com - Administrador</title>
    
    {% block stylesheets %}

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('/bundles/marcoshoyamarquejogo/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />

        <!-- Custom CSS -->
        <link href="{{ asset('/bundles/marcoshoyamarquejogo/css/sb-admin-2.css') }}" rel="stylesheet" type="text/css" />

    {% endblock %}
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">MarqueJogo.com - Administrador</h3>
                    </div>
                    <div class="panel-body">
                        
                        {{ render(controller('MarcoshoyaMarquejogoBundle:Adm/Dashboard:flash')) }}
                        
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
        
                            {{ form_row (form._token) }}
                            <fieldset>
                                <div class="form-group {% if not form.username.vars.valid %} has-error {% endif %}">
                                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Usu√°rio'} }) }}
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="form-group {% if not form.password.vars.valid %} has-error {% endif %}">
                                    {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Senha'} }) }}
                                    {{ form_errors(form.password) }}
                                </div>
                                
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Acessar" />
                            </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>