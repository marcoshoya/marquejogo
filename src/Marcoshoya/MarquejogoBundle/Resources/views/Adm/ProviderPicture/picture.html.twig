{% extends 'MarcoshoyaMarquejogoBundle:Adm:index.html.twig' %}

{% form_theme form 'MarcoshoyaMarquejogoBundle:Adm/Form:fields.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Adm/Dashboard:sidebar', {view : 'provider', item: 'new'})) }}
{% endblock %}

{% block container %}
    <div id="page-wrapper">
        <form action="{{ path('picture_save', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
            {{ form_row (form._token) }}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ entity.name }}: inserir imagem</h1>
                    <p align="right">
                        <a class="btn btn-link" href="{{ path('provider_picture', {'id': entity.id}) }}"> Voltar</a>
                        <button type="submit" class="submit btn btn-primary" value="Salvar" alt="Salvar" title="Salvar">
                           Salvar
                        </button>
                    </p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Imagem</div>
                        <div class="panel-body">
                            <div class="form-group {% if not form.name.vars.valid %} has-error {% endif %}">
                                <label class="col-md-2">{{ form_label(form.name, 'Nome') }}</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group {% if not form.file.vars.valid %} has-error {% endif %}">
                                <label class="col-md-2">{{ form_label(form.file, 'Arquivo') }}</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.file) }}
                                    {{ form_errors(form.file) }}
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
