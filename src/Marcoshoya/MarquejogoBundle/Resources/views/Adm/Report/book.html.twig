{% extends 'MarcoshoyaMarquejogoBundle:Adm:index.html.twig' %}

{% block sidebar %}
    {{ render(controller('MarcoshoyaMarquejogoBundle:Adm/Dashboard:sidebar', {view : 'report', item: 'book'})) }}
{% endblock %}

{% block container %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Últimas Reservas</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Reservas
                        </div>        
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th width="15%">Status</th>
                                            <th width="25%">Fornecedor</th>
                                            <th>Data</th>
                                            <th>Hora</th>
                                            <th>Valor</th>
                                            <th>Ação</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                            <tr class="odd gradeX">
                                                <td>{{ entity.id }}</td>
                                                <td>{{ entity.statusName }}</td>
                                                <td>{{ entity.provider.name }}</td>
                                                <td>{{ entity.date.format('d/m/Y') }}</td>
                                                <td>{{ entity.date.format('H:i') }}</td>
                                                <td>{{ entity.totalPrice }}</td>
                                                <td>
                                                    <span class="btn-group">
                                                        <a href="#">Visualizar</a>
                                                    </span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    </div>
{% endblock %}